#include "Solution.h"
vector<int> Solution::perfect_permutation(int n) {
    vector<int> ans;
    vector<int> left, right;
    if(n>1){
        left=perfect_permutation((n+1)/2);
        right=perfect_permutation(n/2);
        for(int l=0; l<static_cast<int>(left.size()); l++){
            ans.push_back(2*left[l]-1);
        }
        for(int r=0; r<static_cast<int>(right.size()); r++){
            ans.push_back(right[r]*2);
        }
    }
    else ans.push_back(1);
    return ans;
}