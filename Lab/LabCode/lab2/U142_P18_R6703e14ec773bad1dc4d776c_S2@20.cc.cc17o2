#include "Solution.h"
#include <vector>

using namespace std;

vector<int> Solution::perfect_permutation(int n) {
    vector<int> ans(n);
    int i = 0, j = n - 1;
    int num = 1;

    
    while (i < j) {
        ans[i] = num;
        i++;
        num++;
        if (num % 2 == 0) {
            ans[j] = num;
            j--;
            num++;
        }
    }

   
    if (n % 2 == 1) {
        ans[i] = num;
    }

    return ans;
}