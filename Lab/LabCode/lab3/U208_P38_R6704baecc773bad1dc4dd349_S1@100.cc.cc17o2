}

void QuickSort::quick_sort(std::vector<int>& nums, int l, int r) {
    if (l < r) {
        int pi = partition(nums, l, r);
        quick_sort(nums, l, pi - 1);
        quick_sort(nums, pi + 1, r);
    }
