#include "QuickSort.h"

int QuickSort::partition(std::vector<int>& nums, int p, int q) {
    int random_index = rand() % (q - p + 1) + p;
    std::swap(nums[random_index], nums[q]);
    int x = nums[q];
    int i = p - 1;
    for (int j = p; j < q; j++) {
        if (nums[j] <= x) {
            i++;
            std::swap(nums[i], nums[j]);
        }
    }
    std::swap(nums[i + 1], nums[q]);
    return i + 1;
