#include "QuickSort.h"
#include <algorithm>

int QuickSort::partition(std::vector<int>& nums, int p, int q) {
    swap(nums[q],nums[(p + q)/2]);
    int m=nums[q];
    int i=p-1,j=p;
    for(j=p;j<q;j++){
        if(nums[j]<m){
            i++;
            swap(nums[i],nums[j]);
        }
    }
    if(i<q-1){
    swap(nums[i+1],nums[q]);
    }
    return i+1;
