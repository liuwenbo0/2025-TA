}

void QuickSort::quick_sort(std::vector<int>& nums, int l, int r) {
    int q=0;
    if(l<r){
        q=partition(nums,l,r);
        quick_sort(nums,l,q-1);
        quick_sort(nums,q+1,r);
        }
    }
