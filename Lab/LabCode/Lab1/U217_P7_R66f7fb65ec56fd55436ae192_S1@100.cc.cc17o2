    void mergea(std::vector<int>& nums, int left, int mid, int right); 
// 通过归并排序对int队列nums中的[left, right]区间进行升序排序
// @param
// nums: 完整的待排序队列，最终排序的结果应存放在nums中
// left: 当前排序区间的左端点
// right: 当前排序区间的右端点
#include "MergeSort.h"

void mergea(std::vector<int> &nums, int left, int mid, int right)
{
    
    std::vector<int> temp(right - left + 1);

    int i = left;       
    int j = mid + 1;    
    int k = 0;         
    while (i <= mid && j <= right) {
        if (nums[i] <= nums[j]) {
            temp[k++] = nums[i++];
        } else {
            temp[k++] = nums[j++];
        }
    }

    while (i <= mid) {
        temp[k++] = nums[i++];
    }

    while (j <= right) {
        temp[k++] = nums[j++];
    }

    for (int p = 0; p < temp.size(); p++) {
        nums[left + p] = temp[p];
    }
}

void MergeSort::merge_sort_aux(std::vector<int> &nums, int left, int right)
{
    if (left >= right) {
        return;
    }

    int mid = left + (right - left) / 2;
    merge_sort_aux(nums, left, mid);
    merge_sort_aux(nums, mid + 1, right);
    mergea(nums, left, mid, right);
}